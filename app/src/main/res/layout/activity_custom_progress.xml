<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.sj.at.customThree.CustomProgressBar
        android:id="@+id/cpb_one"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:circleWidth="15dp"
        app:firstColor="#D4F668"
        app:secondColor="#2F9DD2"
        app:speed="20" />

    <com.sj.at.customThree.CustomProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:circleWidth="24dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        app:firstColor="#16A3FA"
        app:secondColor="#D20F02"
        app:speed="10"  />

    <Button
        android:id="@+id/btn_change_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Change Color"
        />

    <Button
        android:id="@+id/btn_change_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Change Size"
        />

</LinearLayout>
